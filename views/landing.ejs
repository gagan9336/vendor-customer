<body>
    <nav class="navbar justify-content-center navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Vendor-Customer</a>
    </nav>
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-4 text-center">
                <button type="button" id="button" data-toggle="modal" data-target="#myModal2" class="btn btn-outline-primary btn-lg">Hey! I am Customer.</button>
            </div>
            <div class="col-4 text-center">
