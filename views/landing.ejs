                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
    
                <!-- Modal body -->
                <div class="modal-body">
                        <form action="/vendor/register">
                            <button type="submit" class="float-left btn btn-success">Sign Up</button>
                        </form>
                        <form action="/vendor/login">
                            <button type="submit" class="float-right btn btn-primary">Log In</button>
                        </form>
                </div>
            </div>
        </div>
    </div>

        <!-- The Modal 2 -->
