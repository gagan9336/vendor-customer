<%-include("../partials/header1")%>



<div class="mt-5">
    <h1 style="text-align: center;">--LOGIN--</h1>
    <div style="width: 30%; margin:25px auto;">
        <form action="/vendor/login" method="POST">
            <div class="form-group">
                <label>Phone Number</label>
                <input type="text" name="email" class="form-control"  onkeypress='return restrictAlphabets(event)' minlength="10" maxlength="10" name="email" autocomplete="off" placeholder="Phone Number">
                <small id="emailHelp" class="form-text text-muted">We'll never share your Phone Number with anyone
                    else.</small>
            </div>
            <div class="form-group">
                <label >Password</label>
                <input type="password" name="password" placeholder="password" class="form-control" autocomplete="off">
            </div>
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </form>
        <a style="float: center;" href="/"><button style="border: none; background-color: transparent;">Go
                back!!!</button></a>
    </div>
</div>

<%-include("../partials/footer")%>